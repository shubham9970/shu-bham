<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    <class name ="beans.Product" table="T_Product">
    <id name="product_Id" column="Product_Id"></id>
    <generator class="native"></generator>
    <property name="product_Name" column="Product_Name"></property>
    <property name="product_Price" column="Product_Price"></property>
    </class>
    </hibernate-mapping>